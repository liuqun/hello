# @configure_input@
#

# VPATH for make to search source files
VPATH := @srcdir@

# PATH for make to search compiler toolchains
PATH := /usr/local/arm/3.4.1/bin:$(PATH)

# Compiler options
CC := @CC@
CFLAGS := @CFLAGS@

# Useful commands
MKDIR := mkdir -p
RM := rm -rf

# Project files
programs := hello
sources  := hello.c
objects  := hello.o

#------------------------------
# All building dependences.
.PHONY: all
all: $(programs)
hello: hello.o
hello.o: hello.c
#------------------------------
# Default building rules.
%: %.o
	$(LINK.o) $^ -o $@
%.o: %.c
	$(COMPILE.c) $< -o $@
#------------------------------
# make clean
.PHONY: clean
clean:
	$(RM) $(programs) $(objects)
#------------------------------
# make distclean
.PHONY: distclean
distclean: clean
	$(RM) autom4te.cache configure config.log config.status Makefile

