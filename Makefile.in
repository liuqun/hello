# VPATH for make to search source files
VPATH   := @srcdir@

CC      := @CC@
CFLAGS  := @CFLAGS@
LDFLAGS := @LDFLAGS@

programs := hello
sources  := hello.c
objects  := hello.o

.PHONY: all
.PHONY: clean

all: $(programs)

%.o: %.c
	$(COMPILE.c) $< -o $@
%: %.o
	$(LINK.o) $< -o $@

clean:
	$(RM) $(programs) $(objects)

